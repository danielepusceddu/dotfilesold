# Spawn terminal
super + Return
    st

# Lock Screen
Scroll_Lock
    slock

# Run dmenu
super + d
    dmenu_run

# Run Firefox
super + w
    firefox -P

# Full screenshot
Print
    maim --hidecursor > $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y_%m_%d-%H_%M_%S).png

# Select screenshot
control + Print
    maim --hidecursor -s > $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y_%m_%d-%H_%M_%S).png

# Window screenshot
shift + Print
    maim --hidecursor -i $(xdotool getactivewindow) > $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y_%m_%d-%H_%M_%S).png

# Pause / Unpause mpd music
super + p
    mpc toggle

# Stop mpd music
super + s
    mpc stop

# Volume control
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

super + F12
    pactl set-sink-volume @DEFAULT_SINK@ +5%

super + F11
    pactl set-sink-volume @DEFAULT_SINK@ -5%

super + F10
    pactl set-sink-mute @DEFAULT_SINK@ toggle
